{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "Node",
    "noEmit": true,
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
  },
  "include": [
    "src/**/*"
  ]
}