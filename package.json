{
  "name": "screeps",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "upload": "node dist/upload",
    "build": "bun build ./src/main/main.ts --outfile=dist.js",
    "start": "rm -f dist.js && bun run build && bun run src/upload.js",
    "start:node": "npm run build && npm run upload",
    "lint": "eslint \"src/**/*{.js,.ts}\" --fix && tsc"
  },
  "dependencies": {
    "@softsky/utils": "^1.0.5"
  },
  "devDependencies": {
    "@types/node": "^14.18.63",
    "@types/screeps": "^3.3.8",
    "@softsky/configs": "^1.0.8"
  }
}
